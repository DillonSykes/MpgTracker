<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewRecord">

    <TextView
            android:text="@string/milage"
            android:layout_width="105dp"
            android:layout_height="42dp"
            android:id="@+id/mileageTitle2" android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" app:layout_constraintTop_toBottomOf="@+id/newRecordTitle"
            android:layout_marginTop="200dp"/>
    <TextView
            android:text="@string/new_record"
            android:layout_width="166dp"
            android:layout_height="53dp"
            android:id="@+id/newRecordTitle" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:textStyle="bold" android:textAlignment="center"
            android:textSize="30sp"
    />
    <Button
            android:text="@string/calculate"
            android:layout_width="154dp"
            android:layout_height="62dp"
            android:id="@+id/calculate"
            android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.522"/>
    <TextView
            android:text="@string/gl_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/newRecordTitle"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="76dp"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginBottom="388dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="215dp"
            android:layout_height="76dp"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/calculate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mileageTitle2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.048"/>
</android.support.constraint.ConstraintLayout>
